  

 <h1>
  Payment Results
</h1>

<dl>
  <dt>
    APR
  </dt>
  <dd>
   <%= @monthly_interest_rate = @apr / 100 / 12 %> 
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @number_of_payments = @years * 12 %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
      $<%= @monthly_payment = @present_value * @monthly_interest_rate / (1 - (1 + @monthly_interest_rate)**-@number_of_payments) %>
  </dd>

  <dt>
    Payment
  </dt>
  <dd>
   $<%= @monthly_payment.round(2) %>
  </dd>
</dl>

